{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./frontend/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
